@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

@* Formulário para Cadastrar as Equipes *@
<form action="@Url.Action("Cadastrar")" method="post">

    <label for="IdEquipe">IdEquipe</label>
    <input type="text" name="IdEquipe" id="IdEquipe">

    <label for="Nome">Nome</label>
    <input type="text" name="Nome" id="Nome">
    
    <label for="Imagem">Imagem</label>
    <input type="text" name="Imagem" id="Imagem">
    
    <button type="submit">Cadastrar</button>

</form>

@* Tabela que mostra todas as Equipes cadastradas *@
<table class="table table-responsive table-striped">
    <thead>
        @* Título das colunas da tabela *@
        <th>IdEquipe</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @* Laço para colocar cada Equipe cadastrada na tabela *@
        @foreach (var item in ViewBag.Equipes)
        {
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td>@item.Imagem</td>
            </tr>
        }
    </tbody>
</table>