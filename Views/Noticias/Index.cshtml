@model Noticia
@{
    ViewData["Title"] = "Noticia";
}

@* Formulário para Cadastrar as Notícias *@
<form action="@Url.Action("CadastrarNoticia")" method="post" enctype="multipart/form-data">

    <label for="IdNoticia">IdNotícia</label>
    <input type="text" name="IdNoticia" id="IdNoticia">

    <label for="Titulo">Título</label>
    <input type="text" name="Titulo" id="Titulo">
    
    <label for="Texto">Texto</label>
    <input type="text" name="Texto" id="Texto">
    
    <label for="ImagemN">Imagem</label>
    <input type="file" name="ImagemN" id="ImagemN">
    
    <button type="submit">Cadastrar</button>

</form>

@* Tabela que mostra todas as Notícias cadastradas *@
<table class="table table-responsive table-striped">
    <thead>
        @* Título das colunas da tabela *@
        <th>IdNotícia</th>
        <th>Título</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @* Laço para colocar cada Notícia cadastrada na tabela *@
        @foreach (var itemN in ViewBag.Noticias)
        {
            <tr>
                <td>@itemN.IdNoticia</td>
                <td>@itemN.Titulo</td>
                <td>@itemN.Texto</td>
                <td>
                    <img src="img/Noticias/@itemN.ImagemN" alt="Imagem da equipe @itemN.Titulo">
                </td>
                <td>
                    <a asp-area="" asp-controller="Noticia" asp-action="ExcluirNoticia" asp-route-id="@itemN.IdNoticia">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>